{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015.promise", "es5", "esnext"],
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "jsx": "react",
    "outDir": "built/",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./src/client",
    "./bin",
    "./built",
    "./node_modules",
    "gulpfile.js",
    "webpack.config.js",
    "__test__"
  ]
}
