{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015.promise", "es2015", "es2016", "es5", "esnext"],
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "jsx": "react",
    "outDir": "build/",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./src/client",
    "./bin",
    "./build",
    "./node_modules",
    "gulpfile.js",
    "webpack.config.js",
    "**/__test__"
  ]
}
